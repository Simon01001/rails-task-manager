<h1>List of tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <h3>Task</h3>
  <li><%= link_to task.title, task_path(task) %></li>
  <%= link_to "Delete",
    task_path(task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
  <p><%= link_to "Edit task", edit_path(task) %></p>
  <% end %>
</ul>

<p><%= link_to "New task", tasks_new_path %></p>
